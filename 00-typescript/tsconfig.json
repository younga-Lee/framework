{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir":"scripts",
    "target": "ES2017",                                  
    "module": "ESNext",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
